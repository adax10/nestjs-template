{
    "name": "api-starter",
    "version": "1.0.0",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "upd": "yarn upgrade-interactive --latest",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:cov-services": "jest --coverage --collectCoverageFrom='modules/**/*.{service.ts,utils.ts}' --coveragePathIgnorePatterns='modules/.*/app.service.ts' --runInBand",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "prepare": "husky",
        "precommit": "yarn build && yarn test && yarn lint",
        "format": "yarn prettier -w ./src",
        "format:check": "yarn prettier --check ./src",
        "docker-build": "docker build --build-arg NODE_VERSION=$(cat .nvmrc | sed 's/v//') -t api-starter .",
        "trivy-install": "curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh -s -- -b /usr/local/bin",
        "trivy-file-scan": "trivy fs . --severity CRITICAL,HIGH --exit-code 1 --scanners vuln,secret,config --ignore-unfixed --pkg-types os,library",
        "trivy-image-scan": "yarn docker-build && trivy image --severity CRITICAL,HIGH --exit-code 1 --ignore-unfixed api-starter:latest"
    },
    "dependencies": {
        "@nestjs/common": "11.0.7",
        "@nestjs/config": "4.0.0",
        "@nestjs/core": "11.0.7",
        "@nestjs/platform-express": "11.0.7",
        "@nestjs/swagger": "11.0.3",
        "@nestjs/terminus": "11.0.0",
        "@nestjs/throttler": "5.2.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.1",
        "date-fns": "4.1.0",
        "helmet": "8.0.0",
        "morgan": "1.10.0",
        "ramda": "0.30.1",
        "reflect-metadata": "0.2.2",
        "rxjs": "7.8.1"
    },
    "devDependencies": {
        "@commitlint/cli": "19.6.1",
        "@commitlint/config-conventional": "19.6.0",
        "@nestjs/cli": "10.4.9",
        "@nestjs/schematics": "10.2.3",
        "@nestjs/testing": "10.4.15",
        "@stylistic/eslint-plugin": "2.12.1",
        "@types/express": "5.0.0",
        "@types/jest": "29.5.14",
        "@types/morgan": "1.9.9",
        "@types/node": "22.13.0",
        "@types/ramda": "0.30.2",
        "@types/supertest": "6.0.2",
        "@typescript-eslint/eslint-plugin": "8.22.0",
        "@typescript-eslint/parser": "8.22.0",
        "conventional-changelog-conventionalcommits": "8.0.0",
        "eslint": "9.16.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-functional": "7.2.0",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-nested-if": "1.0.0",
        "eslint-plugin-no-else": "0.2.2",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-prettier": "5.2.3",
        "husky": "9.1.7",
        "jest": "29.7.0",
        "prettier": "3.4.2",
        "rimraf": "6.0.1",
        "source-map-support": "0.5.21",
        "supertest": "7.0.0",
        "ts-jest": "29.2.5",
        "ts-loader": "9.5.2",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.7.3",
        "typescript-eslint": "8.22.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
